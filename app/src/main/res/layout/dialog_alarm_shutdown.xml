<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chose_last_lecture_with_noalarm"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rVLectures"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnNoAlarmShutdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_alarmshutdown"
        app:layout_constraintEnd_toEndOf="@+id/rVLectures"
        app:layout_constraintStart_toStartOf="@+id/rVLectures"
        app:layout_constraintTop_toBottomOf="@+id/rVLectures" />

</androidx.constraintlayout.widget.ConstraintLayout>